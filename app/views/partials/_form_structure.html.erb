<div class="row">
  <div class="col s9">
    <div class="card deep-purple lighten-4">    
      <div class="card-content">
        <span class="card-title"><%= type_of_form %></span>
        <%= simple_form_for(object) do |f| %>
          <%= f.error_notification %>
          <div class="row">
            <div class="form-inputs">
              <%= render partial: "#{fields}", locals: { f: f } %>
          </div>
        </div>
      </div>
    </div>
      <div class="row">
        <div class="form-actions col s9">
          <%= f.button :submit %>
          <%= link_to :back do %>
            <i class="btn waves-effect waves-light deep-purple lighten-2">Back</i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
