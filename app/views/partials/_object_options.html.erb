<% opt = "#{object.respond_to?(:proper_name) ? object.proper_name : (object.respond_to?(:name) ? object.name : model_name.capitalize) }" %>

<div class="form-actions">
  <% if can? :index, model_name %>
    <%= link_to(eval("#{model_name.pluralize}_path"), class: 'btn waves-effect waves-light deep-purple lighten-2') do %>
      &nbsp;Display All <%= model_name.pluralize.capitalize %>
    <% end %>
  <% end %>
  &nbsp;&nbsp;
  <% if can? :edit, model_name %>
    <%= link_to(eval("edit_#{model_name}_path(object)"), class: 'btn waves-effect waves-light deep-purple lighten-2') do %>
        &nbsp;<%= "Edit #{opt}" %>
    <% end %>
  <% end %>
  &nbsp;&nbsp;
  <% if can? :destroy, model_name %>
    <%= link_to(eval("#{model_name}_path(object)"), method: 'delete', data: {confirm: "Are you sure you want to permanently delete #{opt}"}, class: 'btn waves-effect waves-light deep-purple lighten-2 btn-alert') do %>
        &nbsp;<%= "Delete #{opt}" %>
    <% end %>
  <% end %>
</div>