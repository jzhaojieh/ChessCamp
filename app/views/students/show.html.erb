<div class="row">
  <div class="col s8">
    <div class="card indigo lighten-2">
      <div class="card-content white-text">
        <h5>Information about <%= @student.proper_name %></h5><br />

        <b>Age:&nbsp;&nbsp;</b>
        <%= @student.age %><br /><br />

        <b>Rating:&nbsp;&nbsp;</b>
        <%= @student.rating %><br /><br />

        <b>Active?&nbsp;&nbsp;</b>
        <%= @student.active ? "Yes" : "No" %><br><br>

        <b>Family&nbsp;&nbsp;</b>
        <%= link_to "#{@student.family.family_name}", family_path(@student.family)%>
      </div>
    </div>
    <% if can? :edit, Student %>
      <%= link_to(edit_student_path(@student), class: 'waves-effect waves-light btn') do %>
          &nbsp;<%= "Edit #{@student.first_name}" %>
      <% end %>
      &nbsp;&nbsp;
    <% end %>
    
    <% if can?(:destroy, Student) && controller.respond_to?(:destroy) %>
      <%= link_to(student_path(@student), method: 'delete', data: {confirm: "Are you sure you want to permanently delete #{@student.first_name}"}, class: 'waves-effect waves-light btn btn-alert') do %>
          &nbsp;<%= "Delete #{@student.first_name}" %>
      <% end %>
    <% end %>
  </div>
</div>